/* Base styles for the application */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

:root {
  --primary-color: #3b82f6;
  --secondary-color: #f3f4f6;
  --danger-color: #ef4444;
}

body {
  font-family: 'Inter', sans-serif;
  background: var(--background);
  color: var(--foreground);
  margin: 0;
  padding: 0;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

/* Layout */
.layout {
  display: flex;
  min-height: 100vh;
}

.sidebar {
  width: 220px;
  background: var(--secondary-color);
  padding: 2rem 1rem;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.sidebar-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 1rem;
}

.main {
  flex: 1;
  padding: 2rem;
}

.main-header {
  margin-bottom: 2rem;
}

.page-title {
  font-size: 2rem;
  font-weight: 700;
}

/* Navigation */
.nav-list {
  list-style: none;
  padding: 0;
}

.nav-item {
  margin-bottom: 1rem;
}

.nav-link {
  color: var(--primary-color);
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  transition: background 0.2s;
}

.nav-link:hover {
  background: #e0e7ff;
}

.nav-link.active {
  background: #3b82f6;
  color: #fff;
}
